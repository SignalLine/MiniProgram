<!--pages/home/home.wxml-->
<view class='home'>
  <view hidden='{{!showTabControl}}'>
    <w-tab-control class='tab-control-temp' 
                 titles="{{titles}}" 
                 bind:tabclick="tabClick"/>
  </view>
  
  <scroll-view class="content"
              scroll-y 
              bindscrolltolower="loadMore"
              scroll-with-animation="true"
              scroll-top="{{topPosition}}"
              bindscroll="scrollPosition">

    <!-- 展示轮播图 -->
    <w-swiper list="{{banners}}"/>
    <!-- 推荐数据展示 -->
    <w-recommend recommends="{{recommends}}" bind:imageLoad="onImageLoad"/>
    <!-- 展示本周流行 -->
    <view class="popular">
      <image src="/assets/images/home/recommend_bg.jpg" mode="widthFix"/>
    </view>
    <!-- tab-control -->
    <w-tab-control class='tab-control' titles="{{titles}}" bind:tabclick="handleTabClick"/>
    <!-- 展示商品数据 -->
    <w-goods goods="{{goods[currentType].list}}"/>
    <!-- 回到顶部 hidden属性对于自定义组件是无效的-->
    <w-back-top  bindtap="onBackTop" wx:if="{{showBackTop}}"/>

  </scroll-view>

</view>
