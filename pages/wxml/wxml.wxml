<!-- item index起名字 -->
<block wx:for="{{movies}}" wx:for-item="movie" wx:for-index="i">
  <view>{{movie}} {{i}}</view>
</block>



<!-- key的作用 提高循环的性能 -->
<view wx:for="{{letters}}" wx:key="i">{{item}}</view>

