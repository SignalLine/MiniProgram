<!-- wxml格式 -->

<!-- mustache -->
<view>{{message}}</view>
<view>{{firstname + ' ' + lastname}}</view>
<view>{{age > 18 ? "成年人" : "未成年人"}}</view>

<view>{{nowTime}}</view>
<view>{{nowTime2}}</view>
<view>{{nowTime3}}</view>
<view>{{nowTime4}}</view>

<button size="mini" bindtap="handleSwitchColor">切换颜色</button>
<view class="box {{isActive ? 'active' : ''}}">哈哈哈</view>

<view>------条件判断-------</view>
<button size='mini' bindtap="handleSwitchShow">切换显示</button>
<view wx:if="{{isShow}}">说的{{isShow}}</view>

<!-- wx:elif/wx:else -->
<button size="mini" bindtap="handleIncrement">分数递增6</button>
<view wx:if="{{score >= 90}}">优秀</view>
<view wx:elif="{{score >= 80}}">良好</view>
<view wx:elif="{{score >= 60}}">及格</view>
<view wx:else>不及格</view>

<!-- hidden隐藏属性 -->
<view hidden="{{false}}">我是hidden属性控制的内容</view>
<!-- wx:if和hidden在隐藏组件有什么区别 -->

<!-- 
  hidden将一个组件隐藏起来时候，改组件依然存在(display:none)
  wx:if 将一个组件隐藏起来时候，改组件根本不存在（压根没有创建）

  如何选择：
    如果显示和隐藏切换频率高，hidden

 -->
<view hidden="{{true}}">我是hidden属性控制的内容</view>
<view wx:if="{{true}}">我是wx:if属性控制的内容</view>


